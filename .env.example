# Django Settings
SECRET_KEY=django-insecure-cambia-esta-clave-por-una-segura-en-produccion
DEBUG=False
ALLOWED_HOSTS=.vercel.app,localhost,127.0.0.1

# Base de Datos PostgreSQL (Para Vercel)
# Si usas Vercel Postgres, estas variables se crean automáticamente
# Solo descomenta y ajusta si usas otra base de datos
DB_ENGINE=django.db.backends.postgresql
DB_NAME=verceldb
DB_USER=default
DB_PASSWORD=tu_password_aqui
DB_HOST=tu-proyecto-postgres.vercel-storage.com
DB_PORT=5432

# Para desarrollo local con SQLite, comenta las variables DB_* de arriba
# Django usará SQLite automáticamente si DB_ENGINE no está definido

# Email Configuration (Opcional)
